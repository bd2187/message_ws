extends layout.pug

block content
    form(action="/user/signup" method="post" id="loginSignupForm")
        h1 Sign up
        if message
            p #{message}
        if email
            input(type="text" name="email" placeholder="Email" class="login-input" value=email)
        else    
            input(type="text" name="email" placeholder="Email" class="login-input")
        if username
            input(type="text" name="username" placeholder="Username" class="login-input" value=username)
        else
            input(type="text" name="username" placeholder="Username" class="login-input")
        input(type="password" name="password" placeholder="Password" class="login-input")
        input(type="password" name="password2" placeholder="Confirm Password" class="login-input")
        button Sign up